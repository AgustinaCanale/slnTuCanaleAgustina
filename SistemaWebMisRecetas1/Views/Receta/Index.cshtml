@model IEnumerable<SistemaWebMisRecetas1.Models.Receta>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

   

    <table>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Titulo)</th>
            <th>@Html.DisplayNameFor(model => model.Categoria)</th>
            <th>@Html.DisplayNameFor(model => model.Ingredientes)</th>
            <th>@Html.DisplayNameFor(model => model.Instrucciones)</th>
            <th>@Html.DisplayNameFor(model => model.Autor)</th>
            <th>@Html.DisplayNameFor(model => model.Apellido)</th>
            <th>@Html.DisplayNameFor(model => model.Edad)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            @*<th></th>*@
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.ActionLink(item.Titulo, "Detalle", "Receta", new{id = item.Id})</td>
                <td>@Html.DisplayFor(modelItem => item.Categoria)</td>
                <td>@Html.DisplayFor(modelItem => item.Ingredientes)</td>
                <td>@Html.DisplayFor(modelItem => item.Instrucciones)</td>
                <td>@Html.ActionLink(item.Autor, "RecetaAutor", "Receta", new{autor = item.Autor})</td>
                <td>@Html.ActionLink(item.Apellido, "RecetaApellido", "Receta", new{apellido = item.Apellido})</td>
                <td>@Html.DisplayFor(modelItem => item.Edad)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>
                    @Html.ActionLink("Eliminar", "Delete", "Receta", new{id = item.Id})
                    @Html.ActionLink("Editar", "Edit", "Receta", new{id = item.Id})
                   
                </td>
            </tr>
        }
    </table>

    @section SideBar {
        <div>
         
            @Html.ActionLink("Crear", "Create","Receta")
            @Html.ActionLink("Volver al inicio", "Index", "Home")
        

        </div>
    }
</body>
</html>